    margin-bottom: 15px;
  }

  .about-content ul {
    margin: 15px 0;
    padding-left: 25px;
  }

  .about-content li {
    margin-bottom: 5px;
  }

  .about-content em {
    font-style: italic;
  }

  .about-content a {
    color: #0000ff;
  }

  .songs-section {
    margin-bottom: 50px;
  }

  .songs-section h2 {
    font-size: 2.2rem;
    margin-bottom: 30px;
    text-align: center;
  }

  .songs-blue {
    color: #000066;
  }

  .songs-red {
    color: #ff0033;
  }

  .song-content {
    color: #000066;
    line-height: 1.6;
  }

  .song-content p {
