    background: #f0fff0;
    padding: 20px;
    border-radius: 8px;
    margin-bottom: 20px;
  }

  .presentation-info p {
    font-size: 1.1rem;
    color: #009966;
    line-height: 1.5;
    margin: 0;
  }

  .michael-info {
    font-size: 1.1rem;
    color: #663300;
    line-height: 1.6;
  }

  .content-grid {
    display: grid;
    grid-template-columns: 280px 1fr;
    gap: 40px;
    margin-bottom: 50px;
  }

  @media (max-width: 768px) {
    .content-grid {
      grid-template-columns: 1fr;
    }
  }

  .sidebar {
    background: #f9f9f9;
    padding: 20px;
    border-radius: 12px;
  }

