    color: #FF0000;
    font-weight: bold;
    margin-bottom: 5px;
  }

  .intro-questions p {
    color: #663300;
    font-weight: bold;
    margin-bottom: 15px;
    line-height: 1.4;
  }

  .section-title {
    text-align: center;
    color: #663300;
    font-size: 1.6rem;
    margin-bottom: 30px;
  }

  .content {
    max-width: 800px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .research-text {
    margin-bottom: 30px;
  }

  .research-text p {
    margin-bottom: 1.2em;
    color: #663300;
    font-weight: bold;
  }

  .answer-sheet-box {
    background-color: #FFCC00;
    padding: 20px;
    text-align: center;
    margin: 30px 0;
  }

  .answer-sheet-link {
    font-size: 1.4rem;
    font-weight: bold;
    color: #0000FF;
    text-decoration: underline;
  }

  .answer-sheet-box p {
    color: #663300;
    margin-top: 10px;
  }

  .clips-intro {
    text-align: center;
    margin: 30px 0;
  }

  .clips-intro p {
    color: #663300;
    font-weight: bold;
    font-size: 1.1rem;
  }

  .clips-section {
    display: flex;
    flex-wrap: wrap;
    gap: 30px;
    justify-content: center;
    margin: 30px 0;
  }

  .clips-images {
    display: flex;
    flex-direction: column;
    gap: 20px;
    align-items: center;
  }

  .bird-image {
    max-width: 200px;
    height: auto;
  }

  .clips-list {
    display: flex;
    flex-direction: column;
    gap: 15px;
  }

  .clip-item {
    display: flex;
    align-items: center;
    gap: 15px;
  }

  .clip-label {
    font-size: 1.2rem;
    font-weight: bold;
    color: #663300;
    min-width: 70px;
  }

  .clip-item audio {
    width: 240px;
  }

  .footer-message {
    text-align: center;
    margin-top: 40px;
    padding: 20px;
  }

  .footer-message p {
    color: #663300;
    font-size: 1.3rem;
    font-weight: bold;
  }

  @media (max-width: 768px) {
    .intro-content {
      flex-direction: column;
      align-items: center;
    }

    .clips-section {
      flex-direction: column;
      align-items: center;
    }

    .clips-images {
      flex-direction: row;
      flex-wrap: wrap;
      justify-content: center;
    }

    .bird-image {
      max-width: 150px;
    }

    .clip-item {
      flex-direction: column;
      align-items: flex-start;
    }

    .clip-item audio {
      width: 100%;
      max-width: 300px;
    }
  }
</style>
